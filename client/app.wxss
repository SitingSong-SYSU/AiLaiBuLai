/**app.wxss**/
.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  box-sizing: border-box;
} 

.section {
    margin: 45rpx auto;
    position: relative;
    height: 90rpx;
}

.section__title {
    font-weight: bold;
    color: rgb(105,105,105);
    vertical-align: top;
    display: inline-block;
    height: 60rpx;
    line-height: 60rpx;
    font-size: 12pt;
    margin: 0rpx 20rpx 0rpx 20rpx;
}

.section_title {
  font-weight: bold;
  color: rgb(105,105,105);
  height: 60rpx;
  line-height: 60rpx;
  font-size: 12pt;
  margin: 0rpx 20rpx 0rpx 20rpx;
}

.input {
    height: 80rpx;
    line-height: 80rpx;
    font-size: 12pt;
    border-radius: 7px;
    padding-left: 10px;
    font: "Microsoft Yahei";
}

.input-border {
    vertical-align: top;
    display: inline-block;
    border: 1rpx solid rgb(220,220,220);
    border-radius: 5px;
    width: 65%;
    margin: 0 5px 0 18%;
}

.blue-button {
    padding-top: 7rpx;
    padding-bottom: 7rpx;
    width: 65%;
    background-color: #5074d7;
    margin: 30rpx auto;
    margin-bottom: 0rpx;
    border-radius: 5px;
    box-shadow: 0px 2px 4px 2px #A4B5E3;
}

.button-innerText {
    padding-top: 20rpx;
    padding-bottom: 20rpx;
    text-align: center;
    font-size: 16pt;
    color: white;
}

.little-button {
    height: 76rpx;
    line-height: 76rpx;
    display: inline-block;
    margin: 0 10rpx;
    padding: 5rpx 20rpx;
    background-color: #5074d7;
    color: white;
    border-radius: 8rpx;
}

.white-button {
    padding-top: 7rpx;
    padding-bottom: 7rpx;
    width: 63%;
    background-color: white;
    margin: 30rpx auto;
    margin-bottom: 0rpx;
    border-radius: 5px;
    border: 1px #5074d7 solid;
    box-shadow: 0px 2px 4px 2px #CAD0E3;
}

.button-innerText {
    padding-top: 20rpx;
    padding-bottom: 20rpx;
    text-align: center;
    font-size: 12pt;
    color: white;
}

.white-button-innerText {
    padding-top: 20rpx;
    padding-bottom: 20rpx;
    text-align: center;
    font-size: 12pt;
    color: #5074d7;
}

.list-view {
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  display: flex;
  flex-direction: row;
}

.inner-view {
  flex: 1;
}

.camera-back {
  width: 80%;
  margin: 20px 19% 5px 19%;
  height: 400rpx;
  position: absolute;
}

.camera {
  width: 80%;
  height: 400rpx;
  position: relative;
  border-radius: 5px;
}

.image-photo {
  position: absolute;
  left: 0;
  top: 0;
  width: 80%;
  height: 400rpx;
}

.image-back {
  height: 100rpx;
  width: 80%;
  position: absolute;
  bottom: 0rpx;
  background-color: rgba(0,0,0,0.4);
}

.takephoto {
  height: 100rpx;
  width: 100rpx;
  position: absolute;
  left: calc(50% - 50rpx);
}

.empty-view {
  height: 500rpx;
  width: 100%;
}

.picker{
  align-content: center;
  padding-left: 20%;
  color: rgb(105,105,105);
  padding-top: -19px;
  padding-bottom: -20px;
}

.center-text{
  text-align: center;
  color: #5D6885;
}