.userInfo {
    background-color: #5074d7;
    width: 100%;
    height: 300rpx;
}

.userinfo-avatar {
    width: 128rpx;
    height: 128rpx;
    margin: 20rpx;
    border-radius: 50%;
    float: left;
    position: relative;
    top: 50%;
    transform: translate(25%, -75%)
}

.userinfo-nickname {
    color: white;
    margin-left: 40rpx;
    float: left;
    position: relative;
    top: 50%;
    transform: translate(20%, -50%)
}
